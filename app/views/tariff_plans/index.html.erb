<p id="notice"><%= notice %></p>

<h1>Tariff Plans</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Duration</th>
      <th>Price duration</th>
      <th>Price duration sale</th>
      <th>Price comment</th>
      <th>Features</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tariff_plans.each do |tariff_plan| %>
    <tr>
      <td><%= tariff_plan.title %></td>
      <td><%= tariff_plan.price %></td>
      <td><%= tariff_plan.duration %></td>
      <td><%= tariff_plan.price_duration %></td>
      <td><%= tariff_plan.price_duration_sale %></td>
      <td><%= tariff_plan.price_comment %></td>
      <td><%= tariff_plan.features %></td>
      <td><%= link_to 'Show', tariff_plan %></td>
      <td><%= link_to 'Edit', edit_tariff_plan_path(tariff_plan) %></td>
      <td><%= link_to 'Destroy', tariff_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tariff Plan', new_tariff_plan_path %>