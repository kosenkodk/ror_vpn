<%= form_for @user, url: forgot_pwd_path, remote: true do |f| %>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8 text-center">
    <%if flash[:error]%>
    <div class="alert alert-danger" role="alert">
      <%=flash[:error]%>
    </div>
    <%end%>
    <%if flash[:notice]%>
    <div class="alert alert-success" role="alert">
      <%=flash[:notice]%>
    </div>
    <%end%>
  </div>
  <div class="col-sm-2"></div>
</div>

<div class="form-group row">
  <%= f.label t('pages.reset_pwd.form.password'), {class:'col-sm-3 col-form-label'} %>
  <div class="col-sm-6">
    <%= f.text_field :password, required: false, type: :password, class: "form-control", placeholder: t('pages.login.form.help.password') %></br>
  </div>
  <div class="col-sm-3"></div>
</div>

<div class="form-group row">
  <%= f.label t('pages.reset_pwd.form.password_confirm'), {class:'col-sm-3 col-form-label'} %>
  <div class="col-sm-6">
    <%= f.text_field :password_confirm, required: false, type: :password, class: "form-control", placeholder: t('pages.login.form.help.password') %></br>
  </div>
  <div class="col-sm-3"></div>
</div>

<div class="form-group row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <%=f.submit(t('buttons.reset_password'), {class:'btn btn-outline-primary btn-block'})%>
  </div>
  <div class="col-sm-3"></div>
</div>

<%end%>