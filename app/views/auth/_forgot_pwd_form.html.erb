<%= form_for @user, url: forgot_pwd_path, remote: true do |f| %>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8 text-center">
  </div>
  <div class="col-sm-2"></div>
</div>
  <%= render 'shared/flash_messages' %>

<div class="form-group row">
  <%= f.label t('pages.login.form.email_address'), {class:'col-sm-3 col-form-label'} %>
  <div class="col-sm-6">
    <%= f.text_field :email, required: false, type: :email, class: "form-control", placeholder: t('pages.login.form.help.email') %></br>
  </div>
  <div class="col-sm-3"></div>
</div>

<div class="form-group row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <%=f.submit(t("buttons.submit"), {class:'btn btn-outline-primary btn-block'})%>
  </div>
  <div class="col-sm-3"></div>
</div>

<%end%>