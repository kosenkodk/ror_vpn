<div class="payment_methods card-deck mb-3 text-dark text-center">
  <% (0..2).each do |item| %>
  <% image_name = item > 0 ? 'signup/off' : 'signup/on' %>
  <% active_class = item > 0 ? '' : 'active' %>
  <%= render partial: 'auth/payment_method_item', locals: { image_name: image_name, active_class: active_class } %>
  <% end %>
</div>

<div class="container payment_methods border_1_pink">
  <div class="row shadow-vega pb-4">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-left">
      <%= render partial: 'payment_methods_card_info', locals: {f: f} %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>