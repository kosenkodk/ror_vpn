<%= form_for @user, url: login_path, remote: true do |f| %>
<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-8 text-center">
    <%if flash[:error]%>
    <div class="alert alert-danger" role="alert">
      <%=flash[:error]%>
    </div>
    <%end%>
    <%if flash[:notice]%>
    <div class="alert alert-success" role="alert">
      <%=flash[:notice]%>
    </div>
    <%end%>
  </div>
</div>

<div class="form-group row">
  <%= f.label t('pages.login.form.email_address'), {class:'col-sm-4 col-form-label'} %>
  <div class="col-sm-8">
    <%= f.text_field  :email, required: false, type: :email, class: "form-control", placeholder: t('pages.contact_us.form.help.email') %></br>
  </div>
</div>

<div class="form-group row">
  <%= f.label t('pages.login.form.password'), {class:'col-sm-4 col-form-label'} %>
  <div class="col-sm-8">
    <%= f.text_field  :password, required: false, type: :text, class: "form-control", placeholder: t('pages.contact_us.form.help.message_short') %></br>
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-4"></div>
  <div class="col-sm-8">
    <%=f.submit(t("pages.login.form.login"), {id: 'contact_submit', class:'btn btn-outline-primary btn-block'})%>
    <%=link_to t("pages.login.form.login_trouble"), forgot_path %>
  </div>
</div>
</div>
<%end%>