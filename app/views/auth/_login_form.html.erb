<div class="row">
  <div class="col-sm-8 offset-sm-2 text-center">
    <%= render 'shared/flash_messages' %>
  </div>
</div>

<%#= react_component("Login", { forgot_pwd_path: forgot_pwd_path, email: @user.email, password: @user.password }, { prerender: true }) #%>
<%# react_component("Login", { forgot_pwd_path: forgot_pwd_path }, { prerender: true }) #%>

<%= form_for @user, url: login_path, remote: false do |f| %>

<div class="form-group row">
  <%= f.label t('pages.login.form.email_address'), {class:'col-sm-3 col-form-label'} %>
  <div class="col-sm-6">
    <%= f.text_field :email, required: false, type: :email, class: "form-control", placeholder: t('pages.login.form.help.email') %>
  </div>
  <div class="col-sm-3"></div>
</div>

<div class="form-group row">
  <%= f.label t('pages.login.form.password'), {class:'col-sm-3 col-form-label'} %>
  <div class="col-sm-6">
    <div class="input-group">
      <%= f.text_field :password, { required: false, type: :password, id: "forgot-pwd-addon", class: "form-control", "aria-describedby": "forgot-pwd-addon", "aria-label": t('pages.login.form.help.password'), placeholder: t('pages.login.form.help.password') } %>
      <div class="input-group-append">
        <span class="input-group-text" id="forgot-pwd-addon"><a
            href="<%= forgot_pwd_path %>"><%= t("pages.login.form.forgot_pwd") %></a></span>
      </div>
    </div>
  </div>

  <div class="col-sm-3"></div>
</div>

<div class="form-group row">
  <div class="col-sm-6 offset-sm-3">
    <br />
    <%=f.submit(t("pages.login.form.login"), {id: 'contact_submit', class:'btn btn-outline-primary btn-block'})%>
  </div>
</div>

<% end %>