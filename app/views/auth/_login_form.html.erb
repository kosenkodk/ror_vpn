<%= form_for @user, url: login_path, remote: true do |f| %>
<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8 text-center">
    <%if flash[:error]%>
    <div class="alert alert-danger" role="alert">
      <%=flash[:error]%>
    </div>
    <%end%>
    <%if flash[:notice]%>
    <div class="alert alert-success" role="alert">
      <%=flash[:notice]%>
    </div>
    <%end%>
  </div>
  <div class="col-sm-2"></div>

</div>

<div class="form-group row">
  <%= f.label t('pages.login.form.email_address'), {class:'col-sm-3 col-form-label'} %>
  <div class="col-sm-6">
    <%= f.text_field :email, required: false, type: :email, class: "form-control", placeholder: t('pages.login.form.help.email') %></br>
  </div>
  <div class="col-sm-3"></div>
</div>

<div class="form-group row">
  <%= f.label t('pages.login.form.password'), {class:'col-sm-3 col-form-label'} %>
  <div class="col-sm-6">
    <div class="input-group">
      <%= f.text_field :password, { required: false, type: :text, id: "forgot-pwd-addon", class: "form-control", "aria-describedby": "forgot-pwd-addon", "aria-label": t('pages.login.form.help.password'), placeholder: t('pages.login.form.help.password') } %></br>
      <div class="input-group-append">
        <span class="input-group-text" id="forgot-pwd-addon"><a
            href="<%= forgot_pwd_path %>"><%= t("pages.login.form.forgot_pwd") %></a></span>
      </div>
    </div>
  </div>

  <div class="col-sm-3"></div>
</div>

<div class="form-group row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <%=f.submit(t("pages.login.form.login"), {id: 'contact_submit', class:'btn btn-outline-primary btn-block'})%>
  </div>
  <div class="col-sm-3"></div>
</div>

<%end%>