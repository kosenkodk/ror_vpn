<%#= image_tag 'compare/reviews.png' #%>
<div class="reviews card text-center shadow-vega">
  <div class="card-header">
    Why the Media loves VPN
  </div>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-review1" role="tabpanel" aria-labelledby="pills-review1-tab">
      1 <%= render 'reviews/review_summary' %>
    </div>
    <div class="tab-pane fade" id="pills-review2" role="tabpanel" aria-labelledby="pills-review2-tab">
      2 <%= render 'reviews/review_summary' %>
    </div>
    <div class="tab-pane fade" id="pills-review3" role="tabpanel" aria-labelledby="pills-review3-tab">
      3 <%= render 'reviews/review_summary' %>
    </div>
  </div>
  <div class="card-footer text-left">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item col-sm-6 col-md-4">
        <div class="review-owner-container" id="pills-review1-tab" data-toggle="pill" href="#pills-review1" role="tab"
          aria-controls="pills-review1" aria-selected="true">
          <%= render 'reviews/review_owner' %>
        </div>
      </li>
      <li class="nav-item col-sm-6 col-md-4">
        <div class="active review-owner-container" id="pills-review2-tab" data-toggle="pill" href="#pills-review2"
          role="tab" aria-controls="pills-review2" aria-selected="false">
          <%= render 'reviews/review_owner' %>
        </div>
      </li>
      <li class="nav-item col-sm-6 col-md-4">
        <div class="review-owner-container" id="pills-review3-tab" data-toggle="pill" href="#pills-review3" role="tab"
          aria-controls="pills-review3" aria-selected="false">
          <%= render 'reviews/review_owner' %>
        </div>
      </li>
    </ul>
  </div>
</div>