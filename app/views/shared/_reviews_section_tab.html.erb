<%= image_tag 'compare/reviews' %>
<div class="reviews card text-center shadow-vega">
  <div class="card-header">
    Why the Media loves VPN
  </div>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      1 <%= render 'reviews/review_summary' %>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      2 <%= render 'reviews/review_summary' %>
    </div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
      3 <%= render 'reviews/review_summary' %>
    </div>
  </div>
  <div class="card-footer  text-left">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item col-sm-6 col-md-4">
        <div class="review-owner-container" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
          aria-controls="pills-home" aria-selected="true">
          <%= render 'reviews/review_owner' %>
        </div>
      </li>
      <li class="nav-item col-sm-6 col-md-4">
        <div class="active review-owner-container" id="pills-profile-tab" data-toggle="pill" href="#pills-profile"
          role="tab" aria-controls="pills-profile" aria-selected="false">
          <%= render 'reviews/review_owner' %>
        </div>
      </li>
      <li class="nav-item col-sm-6 col-md-4">
        <div class="review-owner-container" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab"
          aria-controls="pills-contact" aria-selected="false">
          <%= render 'reviews/review_owner' %>
        </div>
      </li>
    </ul>
  </div>
</div>