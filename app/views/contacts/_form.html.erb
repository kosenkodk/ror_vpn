    <label for="inputPassword3"
      class="col-sm-2 col-form-label"><%=t('pages.contact_us.form.select_the_department')%></label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
    </div>
  </div> -->

<div class="form-group row">
  <div class="col-sm-4">
  </div>
  <div class="col-sm-8">
    <%=f.submit(t("pages.contact_us.form.submit"), {id: 'contact_submit', class:'btn btn-outline-primary btn-block'})%>
    <!-- <button type="submit" class="btn btn-outline-primary btn-block"><%=t("pages.contact_us.form.submit")%></button> -->
  </div>
</div>
<%end%>