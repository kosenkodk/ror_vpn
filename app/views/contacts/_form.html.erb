<%= form_for @contact, url: contacts_path, remote: true do |f| %>
<div class="form-group row">
  <div class="col-12">
    <%if flash[:error]%>
    <div class="alert alert-danger" role="alert">
      <%=flash[:error]%>
    </div>
    <%end%>
    <%if flash[:notice]%>
    <div class="alert alert-success" role="alert">
      <%=flash[:notice]%>
    </div>
    <%end%>
  </div>

  <%= f.label t('pages.contact_us.form.email'), {class:'col-sm-4 col-form-label'} %>
  <div class="col-sm-8">
    <%= f.text_field  :email, required: false, type: :email, class: "form-control", placeholder: t('pages.contact_us.form.help.email') %></br>
  </div>
</div>
<div class="form-group row">
  <%= f.label t('pages.contact_us.form.select_the_department'), {class:'col-sm-4 col-form-label'} %>
  <div class="col-sm-8">
    <select class="form-control" id="exampleFormControlSelect1">
      <option><%=t('pages.contact_us.form.help.select_the_department1')%></option>
      <option><%=t('pages.contact_us.form.help.select_the_department2')%></option>
    </select>
  </div>
</div>
<div class="form-group row">
  <%= f.label t('pages.contact_us.form.message_short'), {class:'col-sm-4 col-form-label'} %>
  <div class="col-sm-8">
    <%= f.text_field  :message_short, required: false, type: :text, class: "form-control", placeholder: t('pages.contact_us.form.help.message_short') %></br>
  </div>
</div>
<div class="form-group row">
  <%= f.label t('pages.contact_us.form.message'), {class:'col-sm-4 col-form-label'} %>
  <div class="col-sm-8">
    <%= f.text_area  :message, required: false, type: :text, rows: 3, class: "form-control", placeholder: t('pages.contact_us.form.help.message') %></br>
  </div>
</div>

