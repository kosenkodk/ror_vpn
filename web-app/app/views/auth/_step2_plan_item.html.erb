<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 mb-3 p-0 card-group">
  <div class="card mb-3 m-1 shadow-vega <%= active_class %>">
    <div class="card-header pt-0 pb-0">
      <div class="icon-checkbox <%= active_class %> pb-5"></div>
      <%#= image_tag image_name, {class: 'mt-n4'} #%>
      <h6 class="m-0 font-weight-normal"><%= item.try(:title) %></h6>
    </div>
    <div class="card-body pt-0 pb-0">
      <h1 class="card-title pricing-card-title mt-0 mb-0">
        <% if item.price > 0 %>
        <span class="text-sm-1 align-text-top">$</span><%= item.try(:price) %>
        <% else %>
        Free
        <% end %>
      </h1>
      <span class="text-sm-1 align-text-top">Per month</span>

      <% if item.price > 0 %>
      <p class="p-0 mb-0 mt-2">
        <%= link_to "Save $ #{item.try(:price_duration_sale)}", '#', {class: "btn btn-blue #{active_class} rounded-pill text-white"} %>
      </p>
      <h5 class="card-title text-info"><strike>$ <%= item.try(:price_duration) %></strike></h5>
      <h6 class="card-title"><%= item.try(:price_comment) %></h6>
      <% end %>

      <ul class="text-left pt-0 text-opacity">
        <% item.features.split(',').each do |feature| %>
        <li>
          <%#= image_tag 'icons/icon_checkbox_on.png', { class: 'img-fluid', alt: '' } #%>
          <%= feature %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="card-footer p-0 m-0 mt-n2">
      <%# if active_class.present? #%>
      <button type="button" class="btn btn-outline-primary rounded-pill mb-n4 <%=active_class%> d-none">Best
        offer</button>
      <%# end #%>
    </div>
  </div>
</div>